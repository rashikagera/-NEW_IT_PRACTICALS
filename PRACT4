<script>
	var curr_multi = 1
	var curr_time = 2000

	var table_timer = setInterval(() => {
		let new_row = `<tr style="font-size:${16 + curr_multi}px"><td>${curr_multi}</td>`
		for (let i = 2; i <= 10; i++) {
			new_row += `<td>${curr_multi * i}</td>`
		}
		curr_multi += 1
		document.getElementById("multi").innerHTML += new_row
	}, 2000)

	setInterval(() => {
		let split = String(curr_time / 100).split("")
		if (split.length == 1) {
			split.push("0")
			split.reverse()
		}
		document.getElementById("timer").innerHTML = split.join(".")
		curr_time -= 100
		if (curr_time <= 0) {
			curr_time = 2000
		}
	}, 100)
</script>

